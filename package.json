{
  "name": "beads-vscode",
  "displayName": "Beads Project Manager",
  "description": "Manage Beads projects directly from VS Code.",
  "version": "0.0.1",
  "publisher": "beads",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:beadsExplorer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "beads.refresh",
        "title": "Beads: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "beads.openBead",
        "title": "Beads: Open"
      },
      {
        "command": "beads.createBead",
        "title": "Beads: Create",
        "icon": "$(add)"
      },
      {
        "command": "beads.editExternalReference",
        "title": "Beads: Edit External Reference"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "beads",
          "title": "Beads",
          "icon": "$(symbol-event)"
        }
      ]
    },
    "views": {
      "beads": [
        {
          "id": "beadsExplorer",
          "name": "Issues"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Beads",
      "properties": {
        "beads.commandPath": {
          "type": "string",
          "default": "beads",
          "description": "Path to the beads CLI executable"
        },
        "beads.projectRoot": {
          "type": "string",
          "default": "",
          "description": "Override project root for beads commands"
        },
        "beads.dataFile": {
          "type": "string",
          "default": ".beads/issues.jsonl",
          "description": "Path to the beads data JSONL file (relative to the project root or absolute)"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "beads.refresh",
          "when": "view == beadsExplorer",
          "group": "navigation@1"
        },
        {
          "command": "beads.createBead",
          "when": "view == beadsExplorer",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "beads.editExternalReference",
          "when": "view == beadsExplorer && viewItem == bead",
          "group": "navigation@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint . --ext ts",
    "test": "npm run compile && node ./out/test/runTest.js",
    "test:unit": "npm run compile && mocha ./out/test/unit/**/*.test.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.19.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3"
  }
}
